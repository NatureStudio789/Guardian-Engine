cbuffer Transform : register(b0)
{
    float Offset;
};

struct VSInput
{
    float3 Position : POSITION;
};

struct VSOutput
{
    float4 Position : SV_POSITION;
};

VSOutput main(VSInput InputData)
{
    VSOutput OutputData;
    InputData.Position = InputData.Position + float3(Offset, Offset, Offset);
    OutputData.Position = float4(InputData.Position, 1.0f);

    return OutputData;
}
