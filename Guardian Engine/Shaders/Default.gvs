cbuffer Transform : register(b0)
{
    matrix TransformMatrix;
};

struct VSInput
{
    float3 Position : POSITION;
    float2 TextureCoord : TEXTURECOORD;
};

struct VSOutput
{
    float4 Position : SV_POSITION;
    float2 TextureCoord : TEXTURECOORD;
};

VSOutput main(VSInput InputData)
{
    VSOutput OutputData;
    OutputData.Position = mul(float4(InputData.Position, 1.0f), TransformMatrix);
    OutputData.TextureCoord = InputData.TextureCoord;

    return OutputData;
}
