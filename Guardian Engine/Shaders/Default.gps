#include "Lighting/Lighting.gsh"

struct PSInput
{
    float4 Position : SV_POSITION;
    float2 TextureCoord : TEXTURECOORD;
    float3 Normal : Normal;
};

float4 main(PSInput InputData) : SV_TARGET
{
    float4 PixelColor;

    if (EnableAlbedoTexture)
    {
        PixelColor = float4(AlbedoTexture.Sample(MaterialSampler, InputData.TextureCoord).rgb, 1.0f);
    }
    else
    {
        PixelColor = float4(Albedo, 1.0f);
    }

    return PixelColor;
}
